<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id= "@+id/update_profile_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Update your profile"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="24sp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/update_profile_image"
        android:layout_height="250dp"
        android:layout_width="250dp"
        android:layout_alignTop="@+id/update_profile_title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/camera"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/update_profile_image"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryWhite"
        android:id="@+id/update_profile_username"
        android:hint="username"
        />

    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/update_profile_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/mybutton"
        android:text="Ready"
        />

</RelativeLayout>