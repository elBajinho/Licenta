<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GeographicFragment">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_geographic_carpaths"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Chose your Carpaths"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_carphatic_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_geographic_carpaths"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/fragment_geographic_mountains"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/spinner_carphatic_region"
        android:layout_marginTop="100dp"
        android:text="Chose your mountains"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_mountains"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_geographic_mountains"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/fragment_geographic_peak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/spinner_mountains"
        android:layout_marginTop="100dp"
        android:text="Chose your peak"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_peak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_geographic_peak"
        android:layout_marginTop="40dp" />
    <TextView
        android:id="@+id/fragment_geographic_judete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/spinner_peak"
        android:layout_marginTop="100dp"
        android:text="Chose your Judete"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_geographic_judete"
        android:layout_marginTop="40dp" />
</RelativeLayout>
</FrameLayout>