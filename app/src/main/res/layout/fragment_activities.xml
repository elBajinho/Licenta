<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ActivitiesFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:id= "@+id/fragment_activities_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Chose your activities"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activities_recycler"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/activities_recycler"
            android:layout_marginTop="435dp"
            android:layout_centerHorizontal="true"
            android:text="Swipe left" />


    </RelativeLayout>

</FrameLayout>